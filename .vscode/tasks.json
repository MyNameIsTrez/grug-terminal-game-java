{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Recompile",
            "dependsOn": [
                "Compile libgrug.so",
                "Compile game_Game.h",
                "Compile libglobal_library_loader.so",
                "Compile libadapter.so",
            ],
            "dependsOrder": "sequence",
            "group": "build"
        },
        {
            "label": "Compile libgrug.so",
            "command": "gcc",
            "type": "shell",
            "args": [
                "grug/grug.c",
                "-o",
                "grug/libgrug.so",
                "-shared",
                "-fPIC",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wpedantic",
                "-Wshadow",
                "-Wfatal-errors",
                "-g",
                "-rdynamic",
            ],
            "hide": true
        },
        {
            "label": "Compile game_Game.h",
            "command": "javac",
            "type": "shell",
            "args": [
                "-d",
                "classes",
                "-h",
                "headers",
                "game/Game.java",
            ],
            "hide": true
        },
        {
            "label": "Compile libglobal_library_loader.so",
            "command": "gcc",
            "type": "shell",
            "args": [
                "global_library_loader.c",
                "-o",
                "libglobal_library_loader.so",
                "-shared",
                "-fPIC",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wpedantic",
                "-Wshadow",
                "-Wfatal-errors",
                "-g",
                "-I/usr/lib/jvm/jdk-23.0.1-oracle-x64/include",
                "-I/usr/lib/jvm/jdk-23.0.1-oracle-x64/include/linux",
            ],
            "hide": true
        },
        {
            "label": "Compile libadapter.so",
            "command": "gcc",
            "type": "shell",
            "args": [
                "adapter.c",
                "-o",
                "libadapter.so",
                "-shared",
                "-fPIC",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wpedantic",
                "-Wshadow",
                "-Wfatal-errors",
                "-g",
                "-I/usr/lib/jvm/jdk-23.0.1-oracle-x64/include",
                "-I/usr/lib/jvm/jdk-23.0.1-oracle-x64/include/linux",
            ],
            "hide": true
        },
    ]
}
